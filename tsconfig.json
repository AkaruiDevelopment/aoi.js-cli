{
    "compilerOptions": {
      "target": "es2021",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "strict": true,
      "rootDir": "src",
      "outDir": "dist"
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*", "dist/types.js"],
    "compileOnSave": true
  }